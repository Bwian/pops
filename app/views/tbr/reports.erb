<%= form_tag({ controller: 'tbr', action: 'report' }, target: "_blank") do %>
	<fieldset>
		<legend>Telstra Bill Reporting - Reports</legend>
      <div class="field">
  	    <%= label_tag :months, 'Month:' %>
        <%= select_tag :months, options_for_select(@months), class: 'select-narrow', onchange: "javascript:report_select()" %>
      </div>
      
      <div class="field">
  	    <%= label_tag :user_type, 'Type:' %>
        <%= select_tag :user_type, options_for_select(@types), class: 'select-narrow', onchange: "javascript:report_select()" %>
      </div>
      
      <div class="field">
        <%= label_tag :report, 'Report:' %>
        <%= select_tag :report, options_for_select(@reports), class: 'select-narrow', onchange: "javascript:set_form_target()" %>
      </div>
      
      <div class="actions">
        <label>&nbsp;</label>
        <%= submit_tag 'Go', class: "btn btn-primary btn-sm" %>
      </div>
      
  		<div>
  			<label>&nbsp;</label>
  			<% flash.each do |name, msg| %>
  				<%= content_tag :span, msg, class: "#{name} action-flash" %>
  			<% end %>
  		</div>
  </fieldset>
<% end %>

<script>  
  $('#months').selectize({
  	create: false
  });
  
  $('#user_type').selectize({
  	create: false
  });
  
  $('#report').selectize({
  	create: false
  });
</script>