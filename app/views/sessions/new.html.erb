<div class="admin_form" >
	<%= form_tag do %>
		<fieldset>
			<legend>Please Log In</legend>			
			
      <div class="field">
				<label for="code" >Login:</label>
				<%= text_field_tag :code, params[:code], autofocus: true %>
			</div>
			
			<div class="field">
				<label for="password" >Password:</label>
				<%= password_field_tag :password, params[:password] %>
			</div>
			
			<div class="actions">
				<label> </label>        
				<%= submit_tag "Login", class: "btn btn-primary btn-sm" %>
			</div>
          
      <div class="actions">
        <label>&nbsp;</label>
        <% flash.each do |name, msg| %>
          <%= content_tag :span, msg, class: name %>
        <% end %>
      </div>
      
		</fieldset>
	<% end %>
</div>