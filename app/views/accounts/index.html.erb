<% flash.each do |name, msg| %>
	<%= content_tag :p, msg, class: name %>
<% end %>

<div class=header>
  <div class="header-title header-cells"><%= @class.name %></div>
  <div class="header-cells right"><%= link_refresh %></div>
</div>

<table id="accounts" class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Tax Rate</th>
      <th style="text-align:right">Status</th>
    </tr>
  </thead>
  <tbody>
  <% @models.each do |model| %>
    <tr>
      <td><%= link_exo(model) %></td>
      <td><%= model.name %></td>
      <td><%= model.tax_rate ? model.tax_rate.name : '' %></td>
      <td align="right"><%= model.formatted_status %></td>
    </tr>
  <% end %>
  </tbody>
</table>
